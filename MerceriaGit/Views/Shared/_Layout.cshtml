<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        font-family: 'Playfair Display', serif;
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: rgb(255,87,51);padding-top:1rem;padding-bottom:1rem;align-items:center;border:none">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Merceria", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white; font-size:4rem;font-family: 'Playfair Display';font-style:italic" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", null, new { @style = "font-size:3rem;color:white;font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home", null, new { @style = "font-size:3rem;color:white;font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home", null, new { @style = "font-size:3rem;color:white;font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:4rem">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Merceria</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
