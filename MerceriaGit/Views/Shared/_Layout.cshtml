<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        font-family: 'Playfair Display', serif;
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: rgb(255,87,51);padding-top:1rem;padding-bottom:1rem;align-items:center;border:none">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Merceria.com ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white; font-size:4rem;font-family: 'Playfair Display';font-style:italic" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown" style="color: white; font-size: 2rem; font-family: 'Playfair Display'">Registros<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Categorias", "Index", "Categorias", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Detalles de venta", "Index", "DetalleVentas", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Direcciones", "Index", "Direcciones", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Envios", "Index", "Envios", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Paqueterias", "Index", "Paqueterias", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Productos", "Index", "Productos", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Subcategorias", "Index", "Subcategorias", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Tarjetas", "Index", "Tarjetas", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Tipos de usuario", "Index", "TipoUsuarios", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Usuarios", "Index", "Usuarios", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                            <li>@Html.ActionLink("Ventas", "Index", "Ventas", null, new { id = "list", @style = "font-size:1.5rem;font-family: 'Playfair Display';font-weight:700" })</li>
                        </ul>
                    </li>
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container" >
        <img src="~/Content/Images/merceria.jpg" style="margin-left:150px; margin-right:200px; margin-top:30px;"/>

    </div>
    <div class="container body-content" style="margin-top:4rem">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Merceria ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
