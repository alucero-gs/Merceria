    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div align="center">
    <img src="~/Content/imagenes/costura.jpg" width="800" height="10%" />
</div>
<h2 style="font-family: 'Playfair Display'; text-align:center">Borrar Usuario</h2>

