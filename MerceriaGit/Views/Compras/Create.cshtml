                @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control", @style = "font-size:1.5rem;font-family: 'Playfair Display'" } })
                @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger", @style = "font-size:1.5rem;font-family: 'Playfair Display'" })
            </div>
        </div>

