@model MerceriaGit.Models.Compras

@{
    ViewBag.Title = "Realizar compra";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2 class="text-center" style="font-family: 'Playfair Display'">Realizar compra</h2>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Id_Producto, "Id Producto", htmlAttributes: new { @class = "control-label col-md-2",@style = "font-size:1.5rem;font-family: 'Playfair Display'" })
