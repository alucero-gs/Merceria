                @Html.DropDownList("Id_Producto", null, htmlAttributes: new { @class = "form-control" ,@style = "font-size:1.5rem;font-family: 'Playfair Display'" })
                @Html.ValidationMessageFor(model => model.Id_Producto, "", new { @class = "text-danger", @style = "font-size:1.5rem;font-family: 'Playfair Display'" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size:1.5rem;font-family: 'Playfair Display'" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control", @style = "font-size:1.5rem;font-family: 'Playfair Display'" } })
                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger", @style = "font-size:1.5rem;font-family: 'Playfair Display'" })
            </div>
        </div>

        <div class="form-group">
