@model IEnumerable<MerceriaGit.Models.Envios>

@{
    ViewBag.Title = "Envios - Inicio";
}

<div class="container text-center">
    <h1 style="color:black; font-size:4rem;font-family: 'Playfair Display';font-style:italic">Envios</h1>
    <p class="btn btn-info" style="margin-bottom:15px;">
        @Html.ActionLink("Agregar", "Create")
    </p>
</div>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Rastreo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Envio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Estimada_Entrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado_Envio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Entrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paqueterias.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ventas.Id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo_Rastreo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Envio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Estimada_Entrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado_Envio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Entrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paqueterias.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ventas.Id)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
