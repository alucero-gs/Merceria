@model IEnumerable<MerceriaGit.Models.Direcciones>

@{
    ViewBag.Title = "Direcciones - Inicio";
}

<div class="container text-center">
    <h1 style="color:black; font-size:4rem;font-family: 'Playfair Display';font-style:italic">Direcciones</h1>
    <p class="btn btn-info" style="margin-bottom:15px;">
        @Html.ActionLink("Agregar", "Create")
    </p>
</div>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Calle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Entidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Municipio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero_Exterior)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero_Interior)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Postal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Referencias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuarios.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Municipio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_Exterior)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_Interior)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo_Postal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Referencias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuarios.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
